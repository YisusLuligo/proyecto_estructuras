<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.universidad.estructuras.proyecto_estructura.controller.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Logo/T칤tulo -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="游꿧 SyncUp" style="-fx-text-fill: white; -fx-font-weight: bold;">
            <font>
                <Font size="48"/>
            </font>
        </Label>
        <Label text="Motor de Recomendaciones Musicales" style="-fx-text-fill: #e0e0e0;">
            <font>
                <Font size="14"/>
            </font>
        </Label>
    </VBox>

    <!-- Panel de Login -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <Label text="Iniciar Sesi칩n" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;"/>

        <!-- Campo Username -->
        <VBox spacing="5">
            <Label text="Usuario" style="-fx-text-fill: #666;"/>
            <TextField fx:id="txtUsername" promptText="Ingrese su usuario"
                       style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Campo Password -->
        <VBox spacing="5">
            <Label text="Contrase침a" style="-fx-text-fill: #666;"/>
            <PasswordField fx:id="txtPassword" promptText="Ingrese su contrase침a"
                           style="-fx-pref-width: 300; -fx-pref-height: 35; -fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Label de error -->
        <Label fx:id="lblError" style="-fx-text-fill: #e74c3c; -fx-font-size: 12;" wrapText="true" visible="false"/>

        <!-- Botones -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnLogin" text="Iniciar Sesi칩n" onAction="#handleLogin"
                    style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-pref-width: 140; -fx-pref-height: 35; -fx-background-radius: 5; -fx-font-weight: bold; -fx-cursor: hand;"/>
            <Button fx:id="btnRegistro" text="Registrarse" onAction="#handleRegistro"
                    style="-fx-background-color: #764ba2; -fx-text-fill: white; -fx-pref-width: 140; -fx-pref-height: 35; -fx-background-radius: 5; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>

        <!-- Informaci칩n de prueba -->
        <Separator/>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Usuarios de prueba:" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
            <Label text="Admin: admin / admin123" style="-fx-font-size: 10; -fx-text-fill: #666;"/>
            <Label text="Usuario: user1 / pass123" style="-fx-font-size: 10; -fx-text-fill: #666;"/>
        </VBox>
    </VBox>
</VBox>